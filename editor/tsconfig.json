{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "target": "es2016",
    "outDir": "./dist",
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "skipLibCheck": true,
    "stripInternal": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noEmitHelpers": false,
    "lib": ["dom", "es5", "es7"]
  }
}
